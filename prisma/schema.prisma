generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model tb_trip {
  id       BigInt  @id(map: "pk_tb_trip_id") @default(autoincrement())
  userId   BigInt
  tripName String  @db.VarChar(50)
  period   Int
  tb_user  tb_user @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_tb_trip_id_user")
}

model tb_user {
  id       BigInt    @id(map: "pk_tb_user_id") @default(autoincrement())
  fullName String    @db.VarChar(50)
  email    String    @unique(map: "unique_email") @db.VarChar(255)
  password String    @db.VarChar(255)
  tb_trip  tb_trip[]
}
